<%= render "shared/header" %>
<div class="input-box">
  <div class="input-forms">
    <%= form_with(model: @variable_cost, local: true) do |form| %>
    <ul class="input-form">
      <h2 class="input-title">変動費入力</h2>
      <li>
        分類<%= form.collection_select(:variable_cost_category_id, VariableCostCategory.all, :id, :name, {}, {class: "input-select-btn"}) %>
      </li>
      <li>
        備考　<%= form.text_field :remarks, placeholder: "例：インターベット代5,000円含む", class: "input-remarks" %>　
      </li>
      <li>
        金額￥<%= form.text_field :price, placeholder: "金額", class: "input-price" %>円
      </li>
      <li>
        入金日<%= form.date_field :expense_date, placeholder: "出金日", class: "input-date" %>　
      </li>
      <li>
          　　<%= form.submit "保　存", class: "input-btn" %>
      <li>
    </ul>
    <% end %>
  </div>
</div>




<div class="detail-box">
  <div class="detail-title-box">
    <h2 class="detail-title">変動費詳細</h2>
  </div>
  <div class="details">
    <div class="category-detail">
      分 類
    </div>
    <div class="price-detail">
      金 額
    </div>
    <div class="date-detail">
      出金日
    </div>
    <div class="remarks-detail">      
      備 考
    </div>
  </div>
  <% @variable_costs.each do |variable_cost| %>
  <div class="details">
    <div class="category-detail">
      <%= variable_cost.variable_cost_category.name %> 
    </div>
    <div class="price-detail expense-color">
      <%= variable_cost.price.to_s(:delimited) %>円
    </div>
    <div class="date-detail">
      <%= variable_cost.expense_date.strftime("%Y年%m月%d日") %>
    </div>
    <div class="remarks-detail">      
      <%= variable_cost.remarks %>
    </div>
  </div>
  <% end %>
</div>
<%= render "shared/footer" %>