<header class='top-page-header'>
  <div class="top-header">
    <div class='left-header'>
      <div class="title-image">
        <%= image_tag 'title.png'%>
      </div>
      <div class="top-title-box">
        <%= link_to "ACCOUNT BOOK", root_path, class: "top-title" %>
      </div>
    </div>
    <div class='right-header'>
      <div class='lists-right'>
        <% if user_signed_in? %>
          <div class="user-nickname-btn fas fa-user-alt"> <%= link_to current_user.nickname, "#", class: "user-nickname" %>さんのページ </div> 
          <div class="log-out-btn"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "log-out" %> </div> 
        <% else %>
          <div class="log-in-btn"><%= link_to 'ログイン', new_user_session_path, class: "log-in" %></div>
          <div class="sign-up-btn"><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></div>
        <% end %>
      </div>
    </div>
  </div>
    <% if user_signed_in? %>
      <div class="input-contents">
        <ul class="inputs-lists">
          <li class="input-list input-list-color">
            <%= link_to ' HOME', root_path, class: "home_btn fas fa-home" %>
          </li>
          <li class="input-list income-btn">
            <%= link_to ' 収入', new_income_path, class: "income_btn fas fa-money-bill" %>
          </li>
          <li class="input-list fixed-btn">
            <%= link_to ' 固定費', new_fixed_cost_path, class: "fixed_btn fas fa-money-bill-wave" %>
          </li>
          <li class="input-list valiable-btn">
            <%= link_to ' 変動費', new_variable_cost_path, class: "valiable_btn fas fa-money-bill-wave-alt" %>
          </li>
          <li class="input-list purchase-btn">
            <%=  link_to ' 購入予定リスト', purchase_plans_path , class: "purchase_btn fas fa-shopping-cart" %>
          </li>
        </ul>
      </div>
    <% end %>
</header>