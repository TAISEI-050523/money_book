<header class='top-page-header'>
  <div class='left-header'>
    <div class="top-title-box">
      <%= link_to "ACCOUNT BOOK", root_path, class: "top-title" %>
    </div>
  </div>
  <div class='right-header'>
    <div class='lists-right'>
      <% if user_signed_in? %>
        <div class="user-nickname"><%= link_to current_user.nickname, "#", class: "user-nickname" %>さんのページ </div> 
        <div class="logout"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "#" %> </div> 
      <% else %>
        <div><%= link_to 'ログイン', new_user_session_path, class: "login" %></div>
        <div><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></div>
      <% end %>
    </div>
  </div>
</header>