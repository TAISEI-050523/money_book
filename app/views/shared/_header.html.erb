<header class='top-page-header'>
  <div class="top-header">
    <div class='left-header'>
      <div class="top-title-box">
        <%= link_to "ACCOUNT BOOK", root_path, class: "top-title" %>
      </div>
    </div>
    <div class='right-header'>
      <div class='lists-right'>
        <% if user_signed_in? %>
          <div class="user-nickname"><%= link_to current_user.nickname, "#", class: "user-nickname" %>さんのページ </div> 
          <div class="logout"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "#" %> </div> 
        <% else %>
          <div><%= link_to 'ログイン', new_user_session_path, class: "login" %></div>
          <div><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></div>
        <% end %>
      </div>
    </div>
  </div>
    <% if user_signed_in? %>
      <div class="input-contents">
        <ul class="inputs-lists">
          <li class="input-list home-btn">
            <%= link_to 'HOME', root_path, class: "home_btn" %>
          </li>
          <li class="input-list income-btn">
            <%= link_to '収入', new_income_path, class: "income_btn" %>
          </li>
          <li class="input-list fixed_btn">
            <%= link_to '固定費', new_fixed_cost_path, class: "fixed_btn" %>
          </li>
          <li class="input-list valiable_btn">
            <%= link_to '変動費', new_variable_cost_path, class: "valiable_btn" %>
          </li>
        </ul>
      </div>
    <% end %>
</header>